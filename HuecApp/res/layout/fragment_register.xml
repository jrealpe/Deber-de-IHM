<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/scr"
		android:layout_height="fill_parent"
		android:layout_width="fill_parent" 
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:floatview="http://schemas.android.com/apk/res-auto"
		xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
		xmlns:custom="http://schemas.android.com/apk/res-auto">
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >
	    
	    <com.hardik.floatinglabel.FloatingLabelView
	        android:id="@+id/lblNombre"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        floatview:floatHintText="Nombre"
	        floatview:floatHintTextColorFocused="@color/abc_search_url_text_selected"
	        floatview:floatHintTextColorUnFocused="@color/green_complete"
	        floatview:floatHintTextStyle="bold"
	        floatview:textSize="16"
	        floatview:textBackground="@drawable/edt_bg" /> 
	        
	    <com.hardik.floatinglabel.FloatingLabelView
	        android:id="@+id/lblApellido"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        floatview:floatHintText="Apellido"
	        floatview:floatHintTextColorFocused="@color/green"
	        floatview:floatHintTextColorUnFocused="@color/green_complete"
	        floatview:floatHintTextStyle="bold"
	        floatview:textSize="16"
	        floatview:textBackground="@drawable/edt_bg" /> 
	   
	    <com.hardik.floatinglabel.FloatingLabelView
	        android:id="@+id/lblCorreo"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        floatview:floatHintText="Correo"
	        floatview:floatHintTextColorFocused="@color/green"
	        floatview:floatHintTextColorUnFocused="@color/green_complete"
	        floatview:floatHintTextStyle="bold"
	        floatview:textSize="16"
	        floatview:textBackground="@drawable/edt_bg" />
	    
	   	<com.hardik.floatinglabel.FloatingLabelView
	        android:id="@+id/lblUsername"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        floatview:floatHintText="Username"
	        floatview:floatHintTextColorFocused="@color/green"
	        floatview:floatHintTextColorUnFocused="@color/green_complete"
	        floatview:floatHintTextStyle="bold"
	        floatview:textSize="16"
	        floatview:textBackground="@drawable/edt_bg" />
	   	
	    <com.hardik.floatinglabel.FloatingLabelView
	        android:id="@+id/lblContrasena"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        floatview:floatHintText="Contraseña"
	        floatview:floatHintTextColorFocused="@color/green"
	        floatview:isPassword="true"
	        floatview:floatHintTextColorUnFocused="@color/green_complete"
	        floatview:floatHintTextStyle="bold"
	        floatview:textSize="16"
	        floatview:textBackground="@drawable/edt_bg" />
	    
	   <com.hardik.floatinglabel.FloatingLabelView
	        android:id="@+id/lblRepContrasena"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"        
	        floatview:floatHintText="Repetir Contraseña"
	        floatview:floatHintTextColorFocused="@color/green"
	        floatview:isPassword="true"
	        floatview:floatHintTextColorUnFocused="@color/green_complete"
	        floatview:floatHintTextStyle="bold"
	        floatview:textSize="16"
	        floatview:textBackground="@drawable/edt_bg" />
	   
	   <com.dd.processbutton.iml.ActionProcessButton
	        android:id="@+id/btnSignIn"
	        android:layout_width="match_parent"
	        android:layout_height="48dp"
	        android:layout_marginBottom="16dp"
	        android:text="Ingresar"
	        android:textColor="@android:color/white"
	        android:textSize="18sp"
	        custom:pb_colorComplete="@color/green_complete"
	        custom:pb_colorNormal="@color/blue_normal"
	        custom:pb_colorPressed="@color/blue_pressed"
	        custom:pb_colorProgress="@color/purple_progress"
	        custom:pb_textComplete="Success"
	        custom:pb_textProgress="Loading" />
	   
	   <TextView
	        android:id="@+id/lblIngresa"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Ingresa"
	        android:textSize="20dp" />
	   
	</LinearLayout>
</ScrollView>
	