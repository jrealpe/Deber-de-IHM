<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:floatview="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scr"
    android:alpha="0.7"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/ic_login" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registro"
            android:textColor="#FFFFFFFF"
            android:textSize="40dp" />

        <com.hardik.floatinglabel.FloatingLabelView
            android:id="@+id/lblNombre"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            floatview:floatHintText="Nombre"
            floatview:floatHintTextColorFocused="#FFFFFFFF"
            floatview:floatHintTextColorUnFocused="#FFFFFFFF"
            floatview:floatHintTextStyle="bold"
            floatview:textBackground="@drawable/edt_bg"
            floatview:textSize="16" />

        <com.hardik.floatinglabel.FloatingLabelView
            android:id="@+id/lblApellido"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            floatview:floatHintText="Apellido"
            floatview:floatHintTextColorFocused="#FFFFFFFF"
            floatview:floatHintTextColorUnFocused="#FFFFFFFF"
            floatview:floatHintTextStyle="bold"
            floatview:textBackground="@drawable/edt_bg"
            floatview:textSize="16" />

        <com.hardik.floatinglabel.FloatingLabelView
            android:id="@+id/lblCorreo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            floatview:floatHintText="Correo"
            floatview:floatHintTextColorFocused="#FFFFFFFF"
            floatview:floatHintTextColorUnFocused="#FFFFFFFF"
            floatview:floatHintTextStyle="bold"
            floatview:textBackground="@drawable/edt_bg"
            floatview:textSize="16" />

        <com.hardik.floatinglabel.FloatingLabelView
            android:id="@+id/lblUsername"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            floatview:floatHintText="Username"
            floatview:floatHintTextColorFocused="#FFFFFFFF"
            floatview:floatHintTextColorUnFocused="#FFFFFFFF"
            floatview:floatHintTextStyle="bold"
            floatview:textBackground="@drawable/edt_bg"
            floatview:textSize="16" />

        <com.hardik.floatinglabel.FloatingLabelView
            android:id="@+id/lblContrasena"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            floatview:floatHintText="Contraseña"
            floatview:floatHintTextColorFocused="#FFFFFFFF"
            floatview:floatHintTextColorUnFocused="#FFFFFFFF"
            floatview:floatHintTextStyle="bold"
            floatview:isPassword="true"
            floatview:textBackground="@drawable/edt_bg"
            floatview:textSize="16" />

        <com.hardik.floatinglabel.FloatingLabelView
            android:id="@+id/lblRepContrasena"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            floatview:floatHintText="Repetir Contraseña"
            floatview:floatHintTextColorFocused="#FFFFFFFF"
            floatview:floatHintTextColorUnFocused="#FFFFFFFF"
            floatview:floatHintTextStyle="bold"
            floatview:isPassword="true"
            floatview:textBackground="@drawable/edt_bg"
            floatview:textSize="16" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text=""
            android:textSize="10sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSignIn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/back_login"
            android:text="Ingresar"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text=""
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblIngresa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regresar"
            android:textStyle="italic"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />
    </LinearLayout>

</ScrollView>